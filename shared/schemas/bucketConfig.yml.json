{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://quiltdata.com/bucket/config/1",
  "type": "object",
  "properties": {
    "version": {
      "const": "1"
    },
    "ui": {
      "type": "object",
      "properties": {
        "nav": {
          "type": "object",
          "properties": {
            "files": {
              "default": true,
              "type": "boolean"
            },
            "packages": {
              "default": true,
              "type": "boolean"
            },
            "queries": {
              "default": true,
              "type": "boolean"
            }
          }
        },
        "actions": {
          "type": "object",
          "properties": {
            "createPackage": {
              "default": true,
              "type": "boolean"
            },
            "revisePackage": {
              "default": true,
              "type": "boolean"
            },
            "copyPackage": {
              "default": true,
              "type": "boolean"
            }
          }
        }
      }
    }
  }
}
